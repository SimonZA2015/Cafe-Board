<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/skelet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#9E9E9E"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#757575"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:src="@drawable/ic_chevron_right_white"
				android:scaleType="center"
				android:rotation="180"/>
			<LinearLayout
				android:id="@+id/xz"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/logo_athor"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@drawable/athorlogo_white"
				android:scaleType="center"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/info_block"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/wifioff_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#90A4AE"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview4"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/ic_signal_wifi_3_bar_black"
						android:scaleType="center"/>
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Wifi не включен"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<LinearLayout
						android:id="@+id/linear5"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:layout_weight="1"/>
					<Button
						android:id="@+id/wifi_but"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Исправить"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/noinet_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:background="#90A4AE"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview5"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/ic_sync_disabled_black"
						android:scaleType="center"/>
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Нет доступа в инет"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<LinearLayout
						android:id="@+id/linear6"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:layout_weight="1"/>
					<Button
						android:id="@+id/inet_but"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Исправить"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<TextView
					android:id="@+id/text_norm"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Пока все норм"
					android:textSize="12sp"
					android:textColor="#000000"/>
				<LinearLayout
					android:id="@+id/file_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#90A4AE"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/file_pic"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/ic_archive_black"
						android:scaleType="center"/>
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Ошибка с разрешением к файлам"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:orientation="vertical"
						android:layout_weight="1"/>
					<Button
						android:id="@+id/button1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Исправить"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/sit_block"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/wifi_sit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#90A4AE"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview6"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/ic_signal_wifi_3_bar_black"
						android:scaleType="center"/>
					<Switch
						android:id="@+id/wifu_switch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Wifi"
						android:textSize="12sp"
						android:textColor="#000000"
						android:enabled="false"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:background="#90A4AE"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/dev_photo"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/ic_bug_report_black"
						android:scaleType="center"/>
					<Switch
						android:id="@+id/dev_switch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Dev mode"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#757575"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/help"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@drawable/ic_announcement_white"
				android:scaleType="center"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/sitt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@drawable/ic_settings_white"
				android:scaleType="center"
				android:layout_weight="1"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
