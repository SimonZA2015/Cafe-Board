<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/skelet"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/cof3"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/meh"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/sit_pic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_settings_white"
					android:scaleType="center"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear2"
					android:layout_width="match_parent"
					android:layout_height="170dp"
					android:padding="8dp"
					android:background="#FFCC80"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="105dp"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:src="@drawable/right"
						android:scaleType="fitCenter"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="105dp"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:src="@drawable/top"
						android:scaleType="fitCenter"
						android:layout_weight="1"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/photosinput"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFCC80"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/photoinput1"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/ic_add_circle_outline_white"
					android:scaleType="center"
					android:layout_weight="1"/>
				<ImageView
					android:id="@+id/photoinput2"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/ic_add_circle_outline_white"
					android:scaleType="center"
					android:layout_weight="1"/>
				<ImageView
					android:id="@+id/photoinput3"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:src="@drawable/ic_add_circle_outline_white"
					android:scaleType="center"
					android:layout_weight="1"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/edittexts"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#F9A825"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/wifipasstext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/wifipasstextt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="WifiPass:"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<EditText
						android:id="@+id/inputwifi"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="12sp"
						android:textColor="#000000"
						android:hint="Ведите пароль"
						android:textColorHint="#6D4C41"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/savephoto_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<CheckBox
						android:id="@+id/checkbox1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Сохранить фотографии"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/infotext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="2dp"
					android:padding="2dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="Инфо:"
						android:textSize="12sp"
						android:textColor="#000000"/>
					<EditText
						android:id="@+id/inputinfo"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="12sp"
						android:textColor="#000000"
						android:hint="Edit Text"
						android:textColorHint="#6D4C41"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/autosave_block"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<Switch
						android:id="@+id/autosave_sweetch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="12sp"
						android:textColor="#000000"
						android:checked="true"/>
					<TextView
						android:id="@+id/autosave_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Сохранить данные Вайфа и Инфо"
						android:textSize="12sp"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/ic_chevron_right_white"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
